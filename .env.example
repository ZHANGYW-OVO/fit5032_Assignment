# 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ===========================================
# Firebase 配置
# ===========================================
# 从 Firebase Console 获取这些值
VITE_FIREBASE_API_KEY=AIzaSyC-your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:your-app-id

# ===========================================
# EmailJS 配置
# ===========================================
# 从 EmailJS Dashboard 获取这些值
VITE_EMAILJS_SERVICE_ID=service_xxxxxxx
VITE_EMAILJS_TEMPLATE_ID=template_xxxxxxx
VITE_EMAILJS_PUBLIC_KEY=your-public-key

# 邮件模板ID（可选，用于不同类型的邮件）
VITE_EMAILJS_APPOINTMENT_TEMPLATE=template_appointment
VITE_EMAILJS_REMINDER_TEMPLATE=template_reminder
VITE_EMAILJS_CONTACT_TEMPLATE=template_contact

# ===========================================
# API 配置
# ===========================================
# 应用基础URL
VITE_API_BASE_URL=https://your-domain.com/api
VITE_APP_VERSION=1.0.0

# API密钥（用于第三方集成）
VITE_API_KEY=your-api-key

# ===========================================
# 地图服务配置（可选）
# ===========================================
# Mapbox Access Token（如果使用 Mapbox）
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token

# Google Maps API Key（如果使用 Google Maps）
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# ===========================================
# 分析和监控配置（可选）
# ===========================================
# Google Analytics Tracking ID
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN（错误监控）
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Hotjar Site ID（用户行为分析）
VITE_HOTJAR_SITE_ID=your-hotjar-id

# ===========================================
# 功能开关配置
# ===========================================
# 启用/禁用特定功能
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ===========================================
# 第三方服务配置
# ===========================================
# OpenAI API Key（如果集成 AI 功能）
VITE_OPENAI_API_KEY=sk-your-openai-key

# Gemini API Key（Google AI）
VITE_GEMINI_API_KEY=your-gemini-key

# Stripe 公钥（如果有支付功能）
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# ===========================================
# 开发环境配置
# ===========================================
# 开发模式下的特殊配置
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# 开发服务器配置
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173

# ===========================================
# 安全配置
# ===========================================
# CORS 允许的域名
VITE_ALLOWED_ORIGINS=https://your-domain.com,https://your-api-domain.com

# 会话超时时间（毫秒）
VITE_SESSION_TIMEOUT=3600000

# ===========================================
# 内容配置
# ===========================================
# 默认语言
VITE_DEFAULT_LOCALE=en-US

# 支持的语言列表
VITE_SUPPORTED_LOCALES=en-US,zh-CN,es-ES

# 应用名称和描述
VITE_APP_NAME=Elderly Health Charity
VITE_APP_DESCRIPTION=Supporting the health and wellness of elderly community members

# 联系信息
VITE_CONTACT_EMAIL=support@elderlyhealth.org
VITE_CONTACT_PHONE=+1-555-123-4567
VITE_SUPPORT_URL=https://support.elderlyhealth.org

# ===========================================
# 性能配置
# ===========================================
# CDN URL（如果使用）
VITE_CDN_URL=https://cdn.your-domain.com

# 图片优化服务
VITE_IMAGE_OPTIMIZATION_URL=https://images.your-domain.com

# ===========================================
# 缓存配置
# ===========================================
# Service Worker 缓存策略
VITE_SW_CACHE_STRATEGY=cacheFirst
VITE_SW_CACHE_DURATION=86400000

# API 缓存时间（秒）
VITE_API_CACHE_DURATION=300

# ===========================================
# 通知配置
# ===========================================
# Push 通知配置
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# 通知服务端点
VITE_NOTIFICATION_ENDPOINT=https://api.your-domain.com/notifications

# ===========================================
# 数据库配置（如果需要）
# ===========================================
# Supabase 配置（如果使用）
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# 备份和恢复配置
# ===========================================
# 自动备份配置
VITE_AUTO_BACKUP_ENABLED=true
VITE_BACKUP_INTERVAL=86400000

# 备份存储位置
VITE_BACKUP_STORAGE_URL=https://backup.your-domain.com

# ===========================================
# 社交媒体配置
# ===========================================
# 社交媒体链接
VITE_FACEBOOK_URL=https://facebook.com/elderlyhealth
VITE_TWITTER_URL=https://twitter.com/elderlyhealth
VITE_LINKEDIN_URL=https://linkedin.com/company/elderlyhealth

# ===========================================
# 法律和合规配置
# ===========================================
# 隐私政策链接
VITE_PRIVACY_POLICY_URL=https://your-domain.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://your-domain.com/terms
VITE_COOKIE_POLICY_URL=https://your-domain.com/cookies

# 合规配置
VITE_GDPR_ENABLED=true
VITE_CCPA_ENABLED=true
VITE_HIPAA_ENABLED=true